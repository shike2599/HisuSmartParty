<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imm_layout_main"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:gravity="center|center_horizontal|center_vertical"
    android:onClick="onLayoutClick"
    android:orientation="horizontal" 
    >
    <!-- android:background="@drawable/imm_login_meeting_bg" -->
	<ImageView
        android:id="@+id/imm_imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@null" 
        android:visibility="gone"/>
    <!-- <LinearLayout
        android:id="@+id/imm_login_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="right|center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imm_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:maxHeight="200dip"
            android:maxWidth="200dip"
            android:src="@drawable/login_title" />

    </LinearLayout> -->

    <LinearLayout
        android:id="@+id/imm_login_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dip"
        android:layout_weight="2"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/imm_login_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imm_login_input_bg"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TableLayout
                android:id="@+id/imm_right_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dip"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/imm_icon1" />

                    <TextView
                        style="@style/imm_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/imm_login_title"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/imm_login_line" />

                <CheckBox
                    android:id="@+id/imm_checkbox_liveUC"
                    style="@style/imm_MyCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dip"
                    android:text="@string/imm_login_liveUC"
                    android:visibility="gone" />

                <TableRow
                    android:id="@+id/imm_lay_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:paddingTop="5dip" >

                    <TextView
                        android:id="@+id/imm_textServerIP"
                        style="@style/imm_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/imm_login_text_server_name" >

                    </TextView>

                    <AutoCompleteTextView
                        android:id="@+id/imm_editServerIP"
                        style="@style/imm_main_edit" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:completionHint="@string/imm_login_serverip_default"
                        android:hint="@string/imm_login_hint_server_name"
                        android:selectAllOnFocus="true"
                        android:textColorHighlight="#404d4d4d"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:visibility="visible" >
                        <requestFocus/>
                    </AutoCompleteTextView>

                    <Spinner
                        android:id="@+id/imm_spinServerIP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:id="@+id/imm_lay_enterprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/imm_textEnterprise"
                        style="@style/imm_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/imm_login_text_enterprise_name" >
                    </TextView>

                    <AutoCompleteTextView
                        android:id="@+id/imm_editEnterprise"
                        style="@style/imm_main_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/imm_login_hint_enterprise_name"
                        android:selectAllOnFocus="true"
                        android:textColorHighlight="#404d4d4d"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/imm_editLoginUserName"
                        android:singleLine="true" >
                        <requestFocus/>
                    </AutoCompleteTextView>
                </TableRow>

                <TableRow
                    android:id="@+id/imm_lay_RoomID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/imm_textRoomID"
                        style="@style/imm_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/imm_login_text_RoomID" >
                    </TextView>

                    <EditText
                        android:id="@+id/imm_editRoomID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/imm_login_hint_RoomID"
                        android:selectAllOnFocus="true"
                        android:textColorHighlight="#404d4d4d"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:numeric="integer"
                        android:singleLine="true" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/imm_login_line2" />

                <TableRow
                    android:id="@+id/imm_layUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dip" >

                    <TextView
                        android:id="@+id/imm_textUserName"
                        style="@style/imm_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/imm_login_text_username" >
                    </TextView>

                    <EditText
                        android:id="@+id/imm_editLoginUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/imm_login_hint_username"
                        android:selectAllOnFocus="true"
                        android:textColorHighlight="#404d4d4d"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:singleLine="true" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/imm_login_line2" />

                <TableRow
                    android:id="@+id/imm_lay_password_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dip" >

                    <TextView
                        android:id="@+id/imm_textUserPassword"
                        style="@style/imm_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/imm_login_text_password" >
                    </TextView>

                    <EditText
                        android:id="@+id/imm_editLoginPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/imm_login_hint_password"
                        android:selectAllOnFocus="true"
                        android:textColorHighlight="#404d4d4d"
                        android:imeOptions="actionDone|actionGo"
                        android:inputType="textPassword"
                        android:singleLine="true" >
                    </EditText>
                </TableRow>
                
                <TableRow
                    android:id="@+id/imm_lay_password_meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/imm_textPasswordMeeting"
                        style="@style/imm_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/imm_login_text_password_meeting" >
                    </TextView>

                    <EditText
                        android:id="@+id/imm_editLoginPasswordMeeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/imm_login_hint_password"
                        android:selectAllOnFocus="true"
                        android:textColorHighlight="#404d4d4d"
                        android:imeOptions="actionDone|actionGo"
                        android:inputType="textPassword"
                        android:singleLine="true" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/imm_login_line2" />

                <LinearLayout
                    android:id="@+id/imm_lay_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" android:gravity="center">

                    <CheckBox
                        android:id="@+id/imm_checkbox_savePwd"
                        style="@style/imm_MyCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="0dip"
                        android:gravity="center"
                        android:checked="true"
                        android:text="@string/imm_login_save_password" android:drawableLeft="@drawable/imm_checkbox"/>

                    <CheckBox
                        android:id="@+id/imm_checkbox_anonymous"
                        style="@style/imm_MyCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:gravity="center"
                        android:text="@string/imm_login_anonymous" android:drawableLeft="@drawable/imm_checkbox"/>
                    
					<CheckBox
                        android:id="@+id/imm_checkbox_autologin"
                        style="@style/imm_MyCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:gravity="center"
                        android:text="@string/imm_login_autologin" android:drawableLeft="@drawable/imm_checkbox"/>
                    <!--
                         CheckBox
                        android:id="@+id/imm_checkbox_liveUC"
                        style="@style/main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_liveUC" /
                    -->
                </LinearLayout>
            </TableLayout>

           <include layout="@layout/imm_layout_advance"/>

            <LinearLayout
                android:id="@+id/imm_right_center"
                android:layout_width="360dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/imm_btnAdvance"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/imm_login_btn_selector"
                    android:text="@string/imm_login_set_advance" />

                <Button
                    android:id="@+id/imm_btnLogin"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/imm_login_btn_selector"
                    android:text="@string/imm_login_text_LoginButton" >
                </Button>

                <Button
                    android:id="@+id/imm_btnCancel"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/imm_login_btn_selector"
                    android:text="@string/imm_exit"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/imm_layout_meetinglist"/>
    </LinearLayout>

</LinearLayout>