<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/imm_all_menu_hangup_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" 
                 android:onClick="onAllMenuClick"
                 >
                 <!-- 挂断 -->
                <ImageView
                    android:id="@+id/imm_all_menu_hangup"
                    android:src="@drawable/imm_hangup_layout_background" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"
                    />
                <TextView  
                    android:id="@+id/imm_all_menu_hangup_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_mueu_hangup"
                    android:textColor="@color/imm_white"
                    android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	 <LinearLayout
    	     	android:id="@+id/imm_all_menu_camara_change_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" 
                android:onClick="onAllMenuClick"
                 >
                 <!-- 切换镜头-->
                <ImageView
                    android:id="@+id/imm_all_menu_camara_change"
                    android:src="@drawable/imm_mueucamara_change" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"
                    />
                <TextView  
                    android:id="@+id/imm_all_menu_camara_change_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_mueu_camara_change_text"
                    android:textColor="@color/imm_white"
                    android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	<LinearLayout
    	    	android:id="@+id/imm_all_menu_video_controll_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                 android:orientation="vertical" 
                 android:onClick="onAllMenuClick"
                 >
                 <!-- 开关视频 -->
                <ImageView
                    android:id="@+id/imm_all_menu_video_controll"
                    android:src="@drawable/imm_menu_all_video_close" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"/>
                <TextView  
                    android:id="@+id/imm_all_menu_video_controll_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_mueu_video_controll_close_text"
                    android:textColor="@color/imm_white"
                     android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	<LinearLayout
    	    	android:id="@+id/imm_all_menu_video_model_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                 android:orientation="vertical" 
                 android:onClick="onAllMenuClick"
                 android:visibility="gone"
                 >
                 <!--模板 -->
                <ImageView
                    android:id="@+id/imm_all_menu_video_model"
                    android:src="@drawable/imm_video_mode_hd" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"/>
                <TextView  
                    android:id="@+id/imm_all_menu_video_model_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_mueu_video_model_change_hd"
                    android:textColor="@color/imm_white"
                    android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	<LinearLayout
    	    	android:id="@+id/imm_all_menu_fenping_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:onClick="onAllMenuClick"
                 >
                <ImageView
                    android:id="@+id/imm_all_menu_fenping"
                    android:src="@drawable/imm_btn_click_menu6"
                    
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"
                     />
                    <TextView  
                    android:id="@+id/imm_all_menu_fenping_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_all_menu_fenping_text"
                    android:textColor="@color/imm_white"
                     android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	<LinearLayout
    	    	android:id="@+id/imm_all_menu_voicetospeak_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                 android:orientation="vertical" 
                 android:onClick="onAllMenuClick"
                 >
                 <!-- 语音发言 -->
                <ImageView
                    android:id="@+id/imm_all_menu_voicetospeak"
                    android:src="@drawable/imm_btn_click_menu1" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"/>
                <TextView  
                    android:id="@+id/imm_all_menu_voicetospeak_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_all_menu_voicetospeak_open"
                    android:textColor="@color/imm_white"
                     android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	
    
    	<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_vertical"
                 >
                <!-- 文字交流 -->
                <ImageView
                    android:id="@+id/imm_all_menu_written_communication"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dip"
                    android:focusable="true"
                    android:src="@drawable/imm_btn_click_menu2" 
                    android:onClick="onAllMenuClick"/>
    	</LinearLayout>
    	<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/imm_login_line" />
    	<LinearLayout
    	    android:id="@+id/imm_all_menu_electronic_whiteboard_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:visibility="gone"
                 >
                <!-- 电子白板 -->
                <ImageView
                    android:id="@+id/imm_all_menu_electronic_whiteboard"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/imm_btn_click_menu3" 
                    android:padding="5dip"
                    android:focusable="true"
                    android:onClick="onAllMenuClick"/>
    	</LinearLayout>
    	<LinearLayout
                android:id="@+id/imm_all_menu_electronic_hands"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/imm_btn_menu_click"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:onClick="onAllMenuClick" >
                
        	<TextView
                android:id="@+id/imm_textView_electronic_hands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/imm_handup_menu"
                android:gravity="center_horizontal|center_vertical"
                android:text="电子举手"
                android:textAppearance="?android:attr/textAppearanceLarge" />
    	</LinearLayout>
    	
    	<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/imm_login_line" />
    </LinearLayout>
      <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
             android:layout_gravity="right"
             >
    	<LinearLayout
    	    	android:id="@+id/imm_all_menu_document_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:onClick="onAllMenuClick"
                 >
        	<!-- 文档 -->
                <ImageView
                    android:src="@drawable/imm_menu_icon_doc" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"
                    />
                <TextView  
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_all_menu_doc_text"
                    android:textColor="@color/imm_white"
                     android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	<LinearLayout
    	    	android:id="@+id/imm_all_menu_attendees_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:onClick="onAllMenuClick"
                 >
        	<!-- 参会人员 -->
                <ImageView
                    android:id="@+id/imm_all_menu_attendees"
                    android:src="@drawable/imm_btn_click_menu4" 
                    android:focusable="true"
                    style="@style/imm_mueu_icon_style"
                    />
                <TextView  
                    android:id="@+id/imm_all_menu_attendees_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_all_menu_attendees_text"
                    android:textColor="@color/imm_white"
                     android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    	<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/imm_login_line" />
           <LinearLayout
               android:id="@+id/imm_all_menu_setting_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
               	android:orientation="vertical"
               	android:layout_marginRight="10dp"
               	 android:onClick="onAllMenuClick"
                 >
                <!-- 系统设置 -->
                <ImageView
                    android:id="@+id/imm_all_menu_setting"
                    style="@style/imm_mueu_icon_style"
                    android:src="@drawable/imm_btn_click_menu5"
                    android:focusable="true"
                     />
                <TextView  
                    android:id="@+id/imm_all_menu_setting_text"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imm_all_menu_setting_text"
                    android:textColor="@color/imm_white"
                    android:textSize="@dimen/imm_mueu_text"/>
    	</LinearLayout>
    </LinearLayout>
    
           
</LinearLayout>