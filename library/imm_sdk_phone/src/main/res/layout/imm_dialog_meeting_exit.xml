<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="672px"
    android:layout_height="388px"
    android:background="@drawable/imm_bg_roundcorner_white"
    >

    <TextView
        android:id="@+id/tv_dialog_exit_title"
        android:layout_width="match_parent"
        android:layout_height="74px"
        android:background="@drawable/imm_bg_top_roundcorner_grey"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="26px" />
    <!--点击X号外部的FrameLayout仅关闭对话框。不进行其他操作-->
    <FrameLayout
        android:id="@+id/fl_dialog_exit_close"
        android:layout_alignParentRight="true"
        android:layout_width="74px"
        android:layout_height="74px">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="20px"
            android:layout_height="20px"
            android:scaleType="centerInside"
            android:src="@drawable/imm_ic_dialog_close" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_dialog_exit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:gravity="center"
        android:text="@string/imm_exit_not1"
        android:textColor="#333333"
        android:textSize="28px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58px"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exitcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imm_bg_roundcorner_indigo"
            android:paddingBottom="18px"
            android:paddingLeft="85px"
            android:paddingRight="85px"
            android:paddingTop="18px"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="27px" />

        <TextView
            android:id="@+id/exitok"
            android:layout_marginLeft="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imm_bg_roundcorner_indigo"
            android:paddingBottom="18px"
            android:paddingLeft="85px"
            android:paddingRight="85px"
            android:paddingTop="18px"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="27px" />
    </LinearLayout>


</RelativeLayout>