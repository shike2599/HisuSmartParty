<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
	android:paddingTop="@dimen/imm_but_top_size"
	android:paddingBottom="@dimen/imm_but_top_size"
    android:layout_gravity="center"
      >
	 	<ImageView
        android:id="@+id/imm_userIcon"
        android:layout_width="@dimen/imm_panle_but_height"
        android:layout_height="@dimen/imm_panle_but_height"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/imm_grid_width_column_margin"
        android:layout_gravity="left"
         />
    
	    <com.wdliveuc.android.util.AlwaysMarqueeTextView
	        android:id="@+id/imm_userName"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="@dimen/imm_panle_but_text_size3"
	        android:ellipsize="marquee"
	        android:gravity="center|center_vertical"
	        android:singleLine="true"
	        android:text="天津演示前台"
	        android:maxWidth="120dp"
	        android:textColor="@color/imm_gray_dialog_text"
	         />   
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:layout_gravity="left"
	    android:gravity="right">
	     <ImageView
        android:id="@+id/imm_imageDesk"
        android:layout_width="@dimen/imm_but_width"
        android:layout_height="@dimen/imm_but_width"
        android:layout_gravity="right|center_vertical"
        android:clickable="true"  />

    <ImageView
        android:id="@+id/imm_imageHand"
        android:layout_width="@dimen/imm_but_width"
        android:layout_height="@dimen/imm_but_width"
        android:layout_gravity="right|center_vertical"
        android:clickable="true"  />
    <ImageView
        android:id="@+id/imm_imageAudio"
        android:layout_width="@dimen/imm_but_width"
        android:layout_height="@dimen/imm_but_width"
        android:layout_gravity="right|center_vertical"
        android:clickable="true"
        android:src="@drawable/imm_audio_open"
        android:layout_marginRight="2dp"/>
    <ImageView
        android:id="@+id/imm_imageVideo"
        android:layout_width="@dimen/imm_but_width"
        android:layout_height="@dimen/imm_but_width" 
        android:layout_gravity="right|center_vertical"
        android:clickable="true"
        android:layout_marginRight="2dp" 
        android:src="@drawable/imm_video_open"/>
    
    <ImageView
        android:id="@+id/imm_imageSpeaker"
        android:layout_width="@dimen/imm_but_width"
        android:layout_height="@dimen/imm_but_width"
        android:layout_gravity="right|center_vertical"
        android:clickable="true"
        android:src="@drawable/imm_speaker_display"/>
	    
	</LinearLayout>
     
</LinearLayout>