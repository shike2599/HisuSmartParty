<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip">
    <!-- 图片和文字 -->
    <!-- 随便放了一张图片，稍微美化一下 -->
    <!-- <CheckBox 
        android:id="@+id/imm_group_list_item_check"
       android:layout_width="wrap_content"
       android:clickable="false"
       android:focusable="false"
       android:layout_height="wrap_content"/> -->
       <TextView
       android:id="@+id/imm_group_list_item_name" 
       android:layout_width="fill_parent" 
       android:layout_weight="1"
       android:textSize="@dimen/imm_panle_but_text_size2"
       android:layout_height="fill_parent"
       android:paddingLeft="5dip"
       android:gravity="center_vertical"
       android:text="测试中"
       android:textColor="@color/imm_gray_dialog_text"/>
    <TextView
       android:id="@+id/imm_group_list_item_phone" 
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="@dimen/imm_panle_but_text_size2"
       android:paddingLeft="5dip"
       android:gravity="center_vertical"
       android:text="13716945272"
       android:textColor="@color/imm_gray_dialog_text"/>
    
    <TextView
       android:id="@+id/imm_group_list_item_online" 
       android:layout_width="wrap_content" 
       android:layout_height="fill_parent"
       android:textSize="@dimen/imm_panle_but_text_size2"
       android:paddingLeft="5dip"
       android:gravity="center_vertical"
       android:visibility="gone"
       android:textColor="@color/imm_gray_dialog_text"/>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center">
         <ImageView android:id="@+id/imm_group_list_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/imm_list_user_select"
        android:visibility="visible"
        />
        
    </LinearLayout>
   
</LinearLayout>