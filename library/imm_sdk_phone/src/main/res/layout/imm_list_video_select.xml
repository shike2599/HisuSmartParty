<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imm_user_list_bg"
    android:orientation="vertical" > 

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/imm_title_video_select" 
        android:textColor="@color/imm_black"
        android:textSize="@dimen/imm_s0_size_20" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="5.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/imm_login_line" />

    <ListView
        android:id="@+id/imm_listview_videoselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >
    </ListView>

</LinearLayout>