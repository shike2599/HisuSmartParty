<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/imm_bg_notepad"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/imm_relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical" >
        
        <EditText
            android:id="@+id/imm_edit_notepad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:background="@color/imm_color_notepad_bkg"
            android:textColor="@color/imm_color_notepad_text"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" >
        </EditText>
        <Button
            android:id="@+id/imm_btn_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imm_button"
            android:layout_above="@+id/imm_edit_notepad"
            android:layout_alignParentBottom="true"
            android:text="@string/imm_note_load" />
        
		<Button
            android:id="@+id/imm_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imm_button"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imm_btn_load"
            android:text="@string/imm_note_save" />

        <Button
            android:id="@+id/imm_btn_close"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/imm_button"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imm_btn_save"
            android:text="@string/imm_note_exit" />
    </RelativeLayout>

</LinearLayout>