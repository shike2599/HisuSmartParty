<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/title_bar_layout"
        >
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/study_vertical_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vertical_line"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/show_planname_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_toRightOf="@+id/study_vertical_imageview"
            android:textColor="@color/text_color"
            android:text="月度计划"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/study_vertical_imageview"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:id="@+id/mouth_plan_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="13dp"
                android:text="月度"
                android:layout_gravity="center_vertical"
                />
            <View
                android:layout_marginLeft="5dp"
                android:layout_width="2dp"
                android:background="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_height="14dp">
            </View>
            <TextView
                android:id="@+id/quarter_plan_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="13dp"
                android:text="季度"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                />
            <View
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/black"
                android:layout_width="2dp"
                android:layout_height="14dp">
            </View>

            <TextView
                android:id="@+id/year_plan_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="13dp"
                android:text="年度"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专题学习"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/show_expert_study_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学时计划：已学习0课时计划学习0课时"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        />
     <RelativeLayout
         android:layout_marginTop="8dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/show_study_state_textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="已学习100%"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"
             android:layout_centerVertical="true"
             />
         <ProgressBar
             android:id="@+id/expert_study_progressBar"
             style="@android:style/Widget.ProgressBar.Horizontal"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_marginLeft="25dp"
             android:progressDrawable="@drawable/progressbar_bg"
             android:layout_toLeftOf="@+id/show_study_state_textView"
             android:layout_marginRight="15dp"
             android:progress="50"
             />
     </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/background_color_gory"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        >
    </View>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常规学习"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color"
        android:textSize="17dp"
        />
    <TextView
        android:id="@+id/show_routine_study_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学时计划：已学习0课时计划学习0课时"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        />
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/show_routine_study_state_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已学习100%"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />
        <ProgressBar
            android:id="@+id/routine_study_progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:progressDrawable="@drawable/progressbar_bg"
            android:progress="50"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/show_routine_study_state_textView"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/background_color_gory"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        >
    </View>
</LinearLayout>