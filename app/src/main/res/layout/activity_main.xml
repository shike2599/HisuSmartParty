<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto">
    
    <FrameLayout
        android:id="@+id/fl_body"
        android:layout_width="match_parent"
        android:layout_above="@+id/tab_layout"
        android:layout_height="match_parent"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/all_red"
        app:dayNightBackgroundAttr="dayNightBackground"
        tl:tl_indicator_height="0dp"
        tl:tl_iconHeight="18dp"
        tl:tl_iconWidth="18dp"
        tl:tl_indicator_color="@color/gray"
        tl:tl_textSelectColor="@color/all_yellow"
        tl:tl_textUnselectColor="@color/white"
        tl:tl_textsize="12sp"
        tl:tl_underline_height="0dp" />
</RelativeLayout>
