<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
   android:paddingTop="10dp"
    android:paddingBottom="3dp"
	android:id="@+id/join_list_item_footer_layout"
	 android:gravity="center"
	  
     >
      <!-- android:paddingTop="3dp"
    android:paddingBottom="3dp" -->
      <!--    android:background="@color/body_bg_color" -->
	<LinearLayout android:layout_width="335dp"
	    android:layout_height="70dp"
	    android:orientation="horizontal"
	    android:background="@mipmap/join_other_room_box"
	    android:gravity="center"
	    >
     
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:gravity="center"
        >
<!-- style="@style/room_list_item_icon" -->
       <ImageView  
           android:id="@+id/room_info_title_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/join_other_room_add_icon"
           android:layout_marginRight="10dp"
           />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left"
        >
        <TextView 
            android:id="@+id/join_list_item_others_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/room_list_item_title"
            android:text="@string/join_otherroom_title"
            android:textColor="#8a8a8a"
            />
        
    </LinearLayout>
    </LinearLayout>
</LinearLayout>