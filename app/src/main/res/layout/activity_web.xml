<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include
        android:id="@+id/web_ac_title_layout"
        layout="@layout/title_bar_layout"
        ></include>
    <!--<demo.hisu.com.utils.X5WebView-->
        <!--android:layout_height="fill_parent"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:id="@+id/full_web_webview"-->
        <!--android:scrollbars="horizontal"-->
        <!--&gt;</demo.hisu.com.utils.X5WebView>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/show_news_title_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_color_gory"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/news_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="这是新闻标题"
            android:textSize="20dp"
            />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/news_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="2018-12-12"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/collection_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/text_color"
                android:text="收藏"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/news_collection_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/collection_TextView"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/webView_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        >
    </FrameLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
