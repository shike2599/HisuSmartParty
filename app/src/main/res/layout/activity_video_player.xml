<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_bar_layout" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/show_news_title_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_color_gory"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="这是新闻标题"
            android:textSize="20dp" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="2018-12-12"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/video_collection_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/text_color"
                android:text="收藏"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/video_collection_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/video_collection_textView"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/new_video_player"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="280dp">
    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
</LinearLayout>
